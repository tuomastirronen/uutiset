<%= form_tag("/", method: "get") do %>  
	
	            <ul class="list-group">                    
	            	<% @sources.each do |source| %>
	            		<% session_sources = session[:sources] || [] %>
	                    <li class="list-group-item">
	                        <%= source.name %>
	                        <div class="material-switch pull-right">	                            
	                        <%= check_box_tag source.id,
	                        	source.id,
	                        	session_sources.include?(source.id)
                        	%>
	                            <label for="<%= source.id.parameterize.underscore %>" class="label-primary"></label>
	                        </div>
	                    </li>
	                <% end %>
	            </ul>
	
	        <div class="">
	        	<%= submit_tag("Päivitä", :class => 'btn btn-primary') %>
	        </div>
	
<% end %>